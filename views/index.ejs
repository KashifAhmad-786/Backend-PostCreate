<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 flex items-center justify-center p-4">
        <div class="w-full max-w-md bg-zinc-800 rounded-lg shadow-lg p-8">
            <h1 class="text-3xl font-bold text-white mb-6 text-center">Create Your Account</h1>
            
            <form class="space-y-4" action="/register" method="post">
                <!-- Name Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        Name
                    </label>
                    <input 
                        type="text" 
                        name="name"
                        placeholder="Enter your name" 
                        class="w-full px-4 py-2 bg-zinc-700 text-white border border-zinc-600 rounded-lg focus:outline-none focus:border-blue-500 transition"
                        
                    >
                </div>

                <!-- Username Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        Username
                    </label>
                    <input 
                        type="text" 
                        name="username"
                        placeholder="Enter your username" 
                        class="w-full px-4 py-2 bg-zinc-700 text-white border border-zinc-600 rounded-lg focus:outline-none focus:border-blue-500 transition"
                        required
                       
                    >
                </div>

                <!-- Email Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        Email
                    </label>
                    <input 
                        type="email" 
                        name="email"
                        placeholder="Enter your email" 
                        class="w-full px-4 py-2 bg-zinc-700 text-white border border-zinc-600 rounded-lg focus:outline-none focus:border-blue-500 transition"
                        required
                        
                    >
                </div>

                <!-- Password Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        Password
                    </label>
                    <input 
                        type="password" 
                        name="password"
                        placeholder="Enter your password" 
                        class="w-full px-4 py-2 bg-zinc-700 text-white border border-zinc-600 rounded-lg focus:outline-none focus:border-blue-500 transition"
                        required
                        
                    >
                </div>

                <!-- Age Field -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">
                        Age
                    </label>
                    <input 
                        type="number" 
                        name="age"
                        placeholder="Enter your age" 
                        class="w-full px-4 py-2 bg-zinc-700 text-white border border-zinc-600 rounded-lg focus:outline-none focus:border-blue-500 transition"
                        
                    >
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="w-full mt-6 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200"
                >
                    Submit
                    </button>
            </form>
        </div>
    </div>
</body>
</html>