<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white">
    <div class="w-full flex justify-end p-4">
        <a class="bg-red-500 rounded px-3 py-2 text-sm mb-5" href="/logout">Logout</a>
    </div>
    <div class="max-w-2xl mx-auto p-4">
        <!-- Header Section -->
        <div class="mb-8">
            <div class="flex item-start gap-3">
            <div class=" w-10 h-10 rounded-md overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h1 class="text-4xl font-bold mb-2">Hello, <%= user.name %> ðŸ‘‹</h1>
        </div>
        <p class="text-gray-400">you can create a new post.</p>
        </div>

        <!-- Create Post Section -->
        <div class="mb-8">
            <form class="space-y-4" action="/post" method="post">
                <!-- Post Textarea -->
                <textarea 
                    class="w-full resize-none px-4 py-3 bg-zinc-800 text-white border border-zinc-700 rounded-lg focus:outline-none focus:border-blue-500 transition placeholder-gray-500"
                    placeholder="What's on your mind ?"
                    rows="4"
                    name="content"
                ></textarea>

                <!-- Create New Post Button -->
                <button 
                    type="submit" 
                    class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200"
                >
                    Create New Post
                </button>
            </form>
        </div>

        <!-- Your Posts Section -->
        <div>
            <h2 class="text-xl font-semibold mb-4">Your Posts.</h2>
            
            <!-- Post Card 1 -->
            <% user.posts.reverse().forEach(function(post) { %>
            <div class="bg-zinc-800 border border-zinc-700 rounded-lg p-6 mb-4">
                    <h3 class="text-blue-400 font-semibold mb-2">@<%= user.username %></h3>
                <p class="text-gray-300 mb-4">
                    <%= post.content %>
                </p>
                <div class="flex gap-4 text-blue-400">
                    <a class="text-zinc-600" href="/edit/<%= post._id %>">edit</a>
                    <a class="text-zinc-600" href="/delete/<%= post._id %>">delete</a>
                </div>
            </div>
                <% }); %>
        </div>
    </div>
</body>
</html>